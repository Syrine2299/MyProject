                                {{ form_row(edit_form.tache, {'attr': {'class': 'form-control'}}) }}
                                {{ form_row(edit_form.dateEntree, {'attr': {'class': 'form-control'}}) }}
                                {{ form_row(edit_form.dateSortie, {'attr': {'class': 'form-control'}}) }}



                            </div>
                            {{ form_end(edit_form) }}
