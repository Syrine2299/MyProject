{% extends '::base.html.twig' %}

{% block body -%}
<section class="admin">

    <style>
        .admin{
            background-color: #0097AC;
        }

    </style>
    <h1>Ajouter Une Plannification d'Accès</h1>

    <div>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
        {% else %}
            <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
        {% endif %}
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                </div><!-- /.box-header -->
                <div class="box-body">

                    <div class="row">
                        <div class="col-lg-12">
                            {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_row(form.employe, {'attr': {'class': 'form-control'}}) }}
                                {{ form_row(form.salleServeur, {'attr': {'class': 'form-control'}}) }}
                                {{ form_row(form.tache, {'attr': {'class': 'form-control'}}) }}
                                {{ form_row(form.dateEntree) }}
                                {{ form_row(form.dateSortie) }}

                            </div>
                            {{ form_end(form) }}
                            <a  class="btn btn-info pull-right" href="{{ path('affectation') }}">Retour à la liste </a>
                            {% endblock %}
