{% extends 'base.html.twig' %}

{% block title %}Calendar{% endblock %}

{% block body %}
    <h1>Calendar</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ calendar.id }}</td>
        </tr>
        <tr>
            <th>Nom Salle Serveur</th>
            <td>{{ calendar.title }}</td>
        </tr>
        <tr>
            <th>Date Entrée</th>
            <td>{{ calendar.start ? calendar.start|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Date Sortie</th>
            <td>{{ calendar.end ? calendar.end|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Employé</th>
            <td>{{ calendar.description }}</td>
        </tr>
        <tr>
            <th>Background_color</th>
            <td>{{ calendar.backgroundColor }}</td>
        </tr>
        <tr>
            <th>Border_color</th>
            <td>{{ calendar.borderColor }}</td>
        </tr>
        <tr>
            <th>Text_color</th>
            <td>{{ calendar.textColor }}</td>
        </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary pull-right" href="{{ path('event') }}">Retour à la liste</a>

    <a class="btn btn-secondary pull-right" href="{{ path('event_edit', {'id': calendar.id}) }}">Modifier</a>

{% endblock %}