{% extends '::base.html.twig' %}
{% block stylesheets %}
    <style>
        .cols1
        {

            width: 50px;
        }
    </style>
{% endblock %}
{% block body -%}
<section class="admin">

    <style>
        .admin{
            background-color: #0097AC;
        }

    </style>
    <h1>Informations Employé</h1>

    <div>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
        {% else %}
            <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
        {% endif %}
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Afficher employé</h3>

                    <div class="modal fade" id="infos">
                            <div class="modal-dialog">
                                    <div class="modal-content">
                                            <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal">x</button>
                                                    <h4 class="modal-title">Confirmation</h4>
                                                </div>
                                            <div class="modal-body">
                                                    Etes-vous sur de vouloir supprimer !
                                                </div>
                                            <div class="modal-footer">
                                                    {{ form(delete_form) }}
                                                    <button class="btn btn-info" data-dismiss="modal">NON</button>
                                                </div>
                                        </div>
                                </div>
                    </div>

                    <!-- <a data-toggle="modal" href="#infos" class="btn btn-danger pull-right">
                                        Supprimer
                                    </a> -->
                   <!-- <a class="btn btn-info pull-right" href="{{ path('employes_edit', { 'id': entity.id }) }}">éditer</a> -->
                    <a class="btn btn-secondary pull-right" href="{{ path('employes') }}">Retour à la liste</a>
                </div><!-- /.box-header -->
                <div class="box-body">
                    {% for message in app.session.flashbag.get('info') %}
                        <div class="alert alert-success">
                            <strong>Success!</strong> {{ message }}.
                        </div>
                    {% endfor %}
                    <div class="row">
                        <div class="col-lg-12">
                            <table id="example1" class="table">
                                <tbody>
                                <tr>
                                    <th>Nom </th>
                                    <td>{{ entity.nom }}</td>
                                </tr>

                                <tr>
                                    <th>Prenom</th>
                                    <td>{{ entity.prenom }}</td>
                                </tr>

                                <tr>
                                    <th>Profil</th>
                                    <td>{{ entity.profil}}</td>
                                </tr>

                                <tr>
                                    <th>Mail </th>
                                    <td>{{ entity.mail }}</td>
                                </tr>


                                <tr>
                                    <th>Numéro badge</th>
                                    <td>{{ entity.numBadge }}</td>
                                </tr>

                                <tr>
                                    <th>Numéro téléphone</th>
                                    <td>{{ entity.numTelephone }}</td>
                                </tr>

                                </tbody>
                            </table>
                            {% endblock %}

