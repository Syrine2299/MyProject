                    </div>

                </div>
            </div><!-- ./col -->


            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-gray-active">
                    <div class="inner">
                        <a href="{{ path('eventsflame') }}">
                            <i class="glyphicon glyphicon-transfer"></i>
                            <span>Historique des events flame</span>
                        </a>
                    </div>

                </div>
            </div><!-- ./col -->



            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-gray-active">
                    <div class="inner">
                        <a href="{{ path('affectation') }}">
                            <i class="glyphicon glyphicon-transfer"></i>
                            <span>Plannifier un accès aux salles serveurs</span>
                        </a>
                    </div>

                </div>
            </div><!-- ./col -->




        </div>


    </section><!-- /.content -->

{% endblock %}
{% block javascripts %}
    <script src="{{ asset('bundles/perfectcity/plugins/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('bundles/perfectcity/plugins/datatables/dataTables.bootstrap.min.js') }}"></script>
    <script>
        $(function () {
            $("#example1").DataTable();
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": true
            });
        });
    </script>

{% endblock %}

