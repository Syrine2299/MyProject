                </div>
            </div><!-- ./col -->


            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-gray-active">
                    <div class="inner">
                        <a href="{{ path('logacces') }}">
                            <i class="glyphicon glyphicon-transfer"></i>
