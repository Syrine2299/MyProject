<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{% block title %}Contrôle d'accès et de présence {% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('bundles/perfectcity/bootstrap/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/perfectcity/plugins/jvectormap/jquery-jvectormap-1.2.2.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/perfectcity/dist/css/AdminLTE.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/perfectcity/dist/css/skins/_all-skins.min.css') }}">
    <link rel="icon" type="image/x-icon" href="{{ asset('bundles/perfectcity/Image/icon.png') }}" />
    {% block stylesheets %}{% endblock %}

</head>
<body class="skin-blue sidebar-collapse sidebar-mini">
<div class="wrapper">

    <header class="main-header">

        <!-- Logo -->
        <a href="#" class="logo">
            <!-- mini logo for sidebar mini 50x50 pixels -->
            <span class="logo-lg">
            <img src="{{ asset('bundles/perfectcity/dist/img/avatar5.png')}}" alt="smoothy html5 template" width="150px" height="50px">
          </span>
            <!-- logo for regular state and mobile devices -->
            <span class="logo-mini"><b>M</b><b>E</b><b>T</b>S</span>
        </a>
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <!-- Navbar Right Menu -->
            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">
                    <!-- User Account: style can be found in dropdown.less -->
                    <li class="dropdown user user-menu">
                        <a href="{{ path('admin') }}" class="dropdown-toggle" data-toggle="dropdown">
                            <img src="{{ asset('bundles/perfectcity/dist/img/avatar5.png')}}" class="user-image" alt="User Image">
                            <span class="hidden-xs"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- User image -->
                            <li class="user-header">
                                <img src="{{ asset('bundles/perfectcity/dist/img/avatar5.png')}}" class="img-circle" alt="User Image">

                            </li>

                            <!-- Menu Footer-->
                            <li class="user-footer">

                                <div class="pull-left">
                                    <a href="{{ path('user') }}" class="btn btn-default btn-flat"><i class="fa fa-user"></i>
                                        Switch employé</a>
                                </div>

                                <div class="pull-right">
                                    <a href="{{ path('logout') }}" class="btn btn-default btn-flat"><i class="fa fa-unlock"></i>
                                         Se déconnecter</a>


                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>

        </nav>
    </header>
    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
            <!-- Sidebar user panel -->
            <div class="user-panel">
                <div class="pull-left image">
                    <img src="{{ asset('bundles/perfectcity/dist/img/avatar5.png')}}" class="img-circle" alt="User Image">
                </div>
                <div class="pull-left info">
                    <p></p>
                </div>
            </div>
            <!-- search form -->
            <form action="#" method="get" class="sidebar-form">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Recherche...">
                    <span class="input-group-btn">
                <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i></button>
              </span>
                </div>
            </form>
            <!-- /.search form -->
            <!-- sidebar menu: : style can be found in sidebar.less -->
            <ul class="sidebar-menu">
                <li class="treeview">
                    <a href="#">
                        <i class="glyphicon glyphicon-home"></i> <span>Acceuil</span>
                    </a>
                </li>

                <li class="treeview">
                    <a href="{{ path('admin') }}">
                        <i class="glyphicon glyphicon-user"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="treeview">
                    <a href="{{ path('employes') }}">
                        <i class="glyphicon glyphicon-transfer"></i>
                        <span>Gestion des employés</span>
                    </a>
                </li>
                <li class="treeview">
                    <a href="{{ path('salleserveur') }}">
                        <i class="glyphicon glyphicon-transfer"></i>
                        <span>Supervisions des salles serveurs</span>
                    </a>
                </li>



            </ul>
        </section>
        <!-- /.sidebar -->
    </aside>
    <div class="content-wrapper" style="min-height: 946px;">
        <!-- Content Header (Page header) -->
        {% block body %}{% endblock %}
    </div></div></div><!-- /.box-body --></div></div></div></div>

<footer class="main-footer">
    <div class="pull-right hidden-xs">
        <b>Tunisie</b>
    </div>
    <strong>droits d'auteur 2021 <a href="#"></a>.</strong>Tous les droits réservé.reserved.
</footer>
<!-- Add the sidebar's background. This div must be placed
     immediately after the control sidebar -->
<div class="control-sidebar-bg"></div>
</div><!-- ./wrapper -->


<script src="{{ asset('bundles/perfectcity/plugins/jQuery/jQuery-2.1.4.min.js') }}"></script>
{% block javascripts %}{% endblock %}
<script src="{{ asset('bundles/perfectcity/bootstrap/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('bundles/perfectcity/plugins/fastclick/fastclick.min.js') }}"></script>
<script src="{{ asset('bundles/perfectcity/dist/js/app.min.js') }}"></script>
<script src="{{ asset('bundles/perfectcity/plugins/sparkline/jquery.sparkline.min.js') }}"></script>
<script src="{{ asset('bundles/perfectcity/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js') }}"></script>
<script src="{{ asset('bundles/perfectcity/plugins/jvectormap/jquery-jvectormap-world-mill-en.js') }}"></script>
<script src="{{ asset('bundles/perfectcity/plugins/slimScroll/jquery.slimscroll.min.js') }}"></script>
<script src="{{ asset('bundles/perfectcity/plugins/chartjs/Chart.min.js') }}"></script>
<script src="{{ asset('bundles/perfectcity/dist/js/pages/dashboard2.js') }}"></script>
<script src="{{ asset('bundles/perfectcity/dist/js/demo.js') }}"></script>

</body>
</html>
